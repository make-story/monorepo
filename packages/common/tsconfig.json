{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "paths": {
            "src/*": [
                "./src/*"
            ],
            "common/*": [
                "./src/common/*"
            ],
            "utils/*": [
                "./src/common/utils/*"
            ],
            "smartBeauty/*": [
                "../mall/smartBeauty/*"
            ],
            "display/*": [
                "../mall/display/*"
            ],
            "customer/*": [
                "../mall/customer/*"
            ],
            "order/*": [
                "../mall/order/*"
            ],
            "product/*": [
                "../mall/product/*"
            ]
        },
    },
    "exclude": [
        "node_modules",
        ".next",
        "_next",
        "public",
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}